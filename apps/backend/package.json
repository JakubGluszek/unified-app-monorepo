{
  "name": "backend",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "bun run --define process.env.NODE_ENV=\"'development'\" --hot ./src/index.ts",
    "build": "bun build --define process.env.NODE_ENV=\"'production'\" --entrypoints ./src/index.ts --outdir ./dist",
    "typecheck": "tsc --noEmit -p tsconfig.json --composite false",
    "start": "bun run ./dist/index.js",
    "clean": "rm -rf ./node_modules/ ./dist/"
  },
  "dependencies": {
    "superjson": "catalog:",
    "@trpc/server": "catalog:",
    "zod": "catalog:",
    "@hono/trpc-server": "^0.3.2",
    "hono": "^4.6.5"
  },
  "devDependencies": {
    "@types/bun": "latest"
  }
}
