{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "types": [
      "bun"
    ]
  },
  "include": [
    "src/**/*",
    "bun.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
