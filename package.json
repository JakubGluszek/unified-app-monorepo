{
  "name": "repo",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "turbo build",
    "dev": "concurrently \"turbo dev\" \"pnpm --filter desktop desktop:dev\"",
    "ui": "pnpm --filter @repo/ui ui",
    "typecheck": "turbo typecheck",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "commit": "pnpm better-commits",
    "prepare": "husky",
    "generate-env": "./scripts/generate-env.sh",
    "clean": "turbo clean --force && rm -rf ./node_modules/"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "better-commits": "^1.15.7",
    "concurrently": "^9.0.1",
    "husky": "^9.1.6",
    "prettier": "catalog:",
    "turbo": "2.1.1"
  },
  "packageManager": "pnpm@9.12.0",
  "engines": {
    "node": ">=20.17.0"
  },
  "volta": {
    "node": "20.17.0",
    "pnpm": "9.12.0"
  }
}
